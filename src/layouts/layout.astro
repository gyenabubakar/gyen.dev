---
import '~/styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/jpeg" href="/gyen.jpeg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>Gyen Abubakar Sadick - Software Developer</title>
    <meta
      name="description"
      content="Software developer helping startups build solutions—automating workflows, creating real-time collaboration tools, and building component libraries. Experienced across frontend, backend, databases, and deployment."
    />
    <meta
      name="keywords"
      content="Software Developer, Full Stack Developer, TypeScript, React, Node.js, Gyen Abubakar, Web Development, Accra Ghana"
    />
    <meta name="author" content="Gyen Abubakar Sadick" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://gyen.dev/" />
    <meta property="og:title" content="Gyen Abubakar Sadick - Software Developer" />
    <meta
      property="og:description"
      content="Software developer helping startups build solutions—automating workflows, creating real-time collaboration tools, and building component libraries."
    />
    <meta property="og:image" content="https://gyen.dev/gyen.jpeg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:url" content="https://gyen.dev/" />
    <meta property="twitter:title" content="Gyen Abubakar Sadick - Software Developer" />
    <meta
      property="twitter:description"
      content="Software developer helping startups build solutions—automating workflows, creating real-time collaboration tools, and building component libraries."
    />
    <meta property="twitter:image" content="https://gyen.dev/gyen.jpeg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />

    <script is:inline>
      const savedTheme = localStorage.getItem('theme');
      const isDark = savedTheme === 'dark';

      if (isDark) {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>

  <body class="bg-white text-black dark:bg-black dark:text-white">
    <slot />
  </body>
</html>
